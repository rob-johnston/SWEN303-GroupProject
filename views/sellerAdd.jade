extends ../node_modules/jade-bootstrap/_bootstrap
append(rel="stylesheet",href="stylesheets/style.css")
head
	title=title
	//meta(name="viewport" content="width=device-width, initial-scale=1")
append styles
	link(rel="stylesheet", href="/stylesheets/jumbotron-narrow.css")
	link(rel="stylesheet" href="/stylesheets/style.css")
block body	
	.container 
		.header 
			include ./partials/header.jade
		include ./partials/navbar.jade
		
	.container
		.row
			.col-md-7
				form(action="sellerAdd",method="put",id="form1" enctype="multipart/form-data")
					label Listing title
					input(class="form-control",type="text", name="ListingTitle", placeholder="title",required)
					label Colours available
					each colour in colours
						//How should colours be submitted? Number of each colour, or only allow up to 1 for each colour?
						//Should really require that at least one colour is chosen (ie one is above 0).
						p #{colour.ColourName}
						input(class="form-control",type="number",step="1", name='#{colour.ColourKey}', placeholder="0", min=0)
					label Type of hat
					select(class="form-control",name="type")
						each type in types
							option(value='#{type.TypeKey}') #{type.TypeName}
					label Description
					textarea(class="form-control",rows="10", name="ListingDesc", placeholder="description")
					label Price
					input(class="form-control",type="number",step="0.01", name="ListingPrice", placeholder="0", min=0.5, required)
					label Listing image upload
					input(type="file" value="Choose image file to Upload" name="fileUpload" accept="image/*")
					input(type="submit" form="form1" value="Submit listing")