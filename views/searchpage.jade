extends ../node_modules/jade-bootstrap/_bootstrap

head
    title=title

block body
    .row
        .col-xs-1
            h1 Hats
        .col-xs-6
            img(src='images/logo.png', alt='logo',style='width:70px;height:70px;')
        .col-xs-4
            +navbar("","dropdown_menu")
                +nav_item("index.html","active") Home
                +nav_item("about.html") About
                +nav_item("contact.html") Contact
    //- +nav-pills-pull-right([{text:"Home",href:"#"},{text:"Profile",href:"#"},{text:"Message",href:"#"}],0)
    +navbar("","dropdown_menu")
        //- +nav_item("index.html","active") Home
        //- +nav_item("about.html") About
        //- +nav_item("contact.html") Contact
        +nav_item_dropdown("#")(label="Women")
            +nav_item("#") Top Hats
            +nav_item("#") Beanies
            +nav_item("#") Caps
            //- +nav_divider
            //- +nav_header Nav header
            //- +nav_item("#") Separated link
            //- +nav_item("#") One more separated link
        +nav_item_dropdown("#")(label="Men")
            +nav_item("#") Top Hats
            +nav_item("#") Beanies
            +nav_item("#") Caps

    .row
        .col-md-2

        form(id = 'searchbox', name ='search', action='/search', method='GET')
            .col-md-2
                p Minimum Price
                input(type="range" min="0" max="500" value="0" step="50" onchange="showMinValue(this.value)" name = "minprice")
                span(id="minrange")
                p Maximum Price
                input(type="range" min="0" max="500" value="0" step="50" onchange="showMaxValue(this.value)" name = "maxprice")
                span(id="maxrange")

                script.
                    function showMinValue(newValue){ document.getElementById("minrange").innerHTML=newValue;}
                script.
                    function showMaxValue(newValue) {
                        document.getElementById("maxrange").innerHTML = newValue;
                    }
            .col-md-6
                    label
                    input(type="checkbox", name="red")
                    |   red
                    p
                    input(type="checkbox", name="black")
                    |   black
                    p
                    input(type="checkbox", name="blue")
                    |   blue
                    p
                    +input("text","txtName","Eg: Sexy Hats","Product Search", value = "searchbar")
                    +submit("Search")



    .results
        .col-md-2

        .col-md-2
            //


        .col-md-8
            each value in results
                .instanceBox
                    h1 #{value.ListingTitle}
                    img(src='/images/' + value.ListingImage, alt='logo',style='width:50px;height:50px;')
                    p #{value.ListingPrice}